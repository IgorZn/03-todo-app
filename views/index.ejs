<%- include('../views/partials/header'); %>
  <form method="post" action="/todo/add">
    <div>
      <label>ToDo Name</label>
      <input type="text" name="text" placeholder="Add ToDo">
    </div>
    <div>
      <label>ToDo Body</label>
      <textarea type="text" name="body" placeholder="Add Body"></textarea>
    </div>
    <button type="submit">Submit</button>
  </form>

  <ul>
    <% todos.forEach(function(todo){ %>
      <li><%= todo.text %> - <%= todo.body %> <a data-id="<%= todo._id %>" href="#" class="delete-todo">Delete</a></li>
    <% }) %>
  </ul>

<%- include('../views/partials/footer'); %>
