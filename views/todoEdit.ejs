<%- include('../views/partials/header'); %>
  <!-- FORM -->
  <div class="col-md-6">
      <form method="post" action="/todo/edit/<%= todo._id %>">
        <div class="mb-3">
          <label class="form-label">ToDo Name</label>
          <input type="text" name="text" placeholder="Add ToDo" class="form-control" value="<%= todo.text %>">
        </div>
        <div class="mb-3">
          <label>ToDo Body</label>
          <textarea type="text" name="body" placeholder="Add Body" class="form-control"><%= todo.body %></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
  </div>

<%- include('../views/partials/footer'); %>
