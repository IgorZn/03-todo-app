<%- include('../views/partials/header'); %>
  <form method="post" action="/todo/edit/<%= todo._id %>">
    <div>
      <label>ToDo Name</label>
      <input type="text" name="text" placeholder="Add ToDo" value="<%= todo.text %>">
    </div>
    <div>
      <label>ToDo Body</label>
      <textarea type="text" name="body" placeholder="Add Body"><%= todo.body %></textarea>
    </div>
    <button type="submit">Submit</button>
  </form>


<%- include('../views/partials/footer'); %>
